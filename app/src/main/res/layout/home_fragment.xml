<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="2"
    android:paddingHorizontal="20dp"
    android:paddingTop="75dp"
    android:orientation="horizontal"
    android:background="@drawable/nav_bar_background">

    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:id="@+id/sale_image_view">
        <ImageView
        android:src="@drawable/buy_background"
        android:scaleType="centerCrop"
        android:layout_width="165dp"
        android:layout_height="160dp" />
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Properties for Sale"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#10000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:id="@+id/rent_image_view">
        <ImageView
            android:src="@drawable/rent_background"
            android:scaleType="fitXY"
            android:layout_width="165dp"
            android:layout_height="160dp" />
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Properties for Rent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#20000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agri_image_view"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp">
        <ImageView
            android:src="@drawable/agri_land_background"
            android:scaleType="centerCrop"
            android:layout_width="165dp"
            android:layout_height="160dp" />
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Agricultural Lands"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#00000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lands_image_view"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp">
        <ImageView
            android:src="@drawable/builder_land_background"
            android:scaleType="fitXY"
            android:layout_width="165dp"
            android:layout_height="160dp" />
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Lands for Builders"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#10000000"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_columnSpan="2"
        android:text="POST NEW PROPERTY"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:background="#266000" />

</GridLayout>