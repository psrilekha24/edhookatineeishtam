<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CC9000">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:id="@+id/property_photo_list"
        android:src="@mipmap/home_icon"/>
    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/property_price_list"
        android:layout_toEndOf="@+id/property_photo_list"
        android:layout_marginTop="10dp"
        android:text="15000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/property_location_list"
        android:layout_below="@+id/property_price_list"
        android:layout_toEndOf="@+id/property_photo_list"
        android:gravity="center"
        android:text="Guduvanchery"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/property_type_list"
        android:gravity="center"
        android:layout_toEndOf="@+id/property_photo_list"
        android:text="2 BHK Apartment"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/property_location_list"/>

    <ToggleButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/fav_button"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:background="@null"
        android:drawableStart="@drawable/fav_selector"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/posted_on_textview"
        android:background="#50000000"
        android:layout_alignParentBottom="true"
        android:text="Posted on : 24/02/1995"
        android:textSize="12dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/rating_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:id="@+id/rating_indicator_text"
        android:layout_marginLeft="20dp"
        android:text="4.5"
        android:textStyle="bold"
        android:textSize="16sp" />
</RelativeLayout>