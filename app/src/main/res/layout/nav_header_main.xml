<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/nav_bar_background"
    android:padding="5dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="40dp"
        android:id="@+id/profile_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_user_name"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_alignTop="@+id/profile_image"
        android:layout_margin="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="21sp"
        android:gravity="center"
        android:text="@string/guest"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number_profile"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:layout_below="@id/profile_user_name"
        android:layout_toEndOf="@id/profile_image"
        android:layout_marginStart="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_or_logout_button"
        android:text="@string/login_or_signup"
        android:textColor="#FFFFFF"
        android:background="#70000000"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_profile_details"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        app:srcCompat="@mipmap/edit_icon"
        android:clickable="true"
        android:focusable="true"/>

</RelativeLayout>